datasource Audrey-DB {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  content     String
  excerpt     String?
  imageURL    String?
  imageAlt    String?
  publishDate DateTime @default(now())
  category    String?
  author      String
  readTime    String?
  url         String   @unique
}

